<h1><%= @game.title %></h1>
<% if @game.in_stock? %>
  <h2><%= "This game is in stock" %></h2>
  <%= form_for @game do |f| %>  
    <h3>Not in stock?</h3>
    <h4><%= f.label "This has been borrowed by" %></h4>
    <%= f.text_field :borrower %>
    <%= f.submit "Update" %>
  <% end %>  
<% else %>
  <h2><%= "This game is being borrowed by #{@game.borrower}" %>
<% end %>    
